<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Plugin helper -->
        <service id="swark.components.helper.plugin_helper"
                 class="Swark\Components\Helper\PluginHelper">
            <argument type="string">%swark.plugin_name%</argument>
            <argument type="service" id="models" />
            <argument type="service" id="swark.config"/>
        </service>

        <!-- Order helper -->
        <service id="swark.components.helper.order_helper"
                 class="Swark\Components\Helper\OrderHelper">
            <argument type="service" id="models" />
            <argument type="service" id="swark.components.helper.plugin_helper" />
            <argument type="service" id="swark.config"/>
        </service>
    </services>
</container>
