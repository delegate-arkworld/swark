<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Check Transactions Command -->
        <service id="swark.components.commands.check_transactions_command"
                 class="Swark\Components\Commands\CheckTransactionsCommand">
            <tag name="console.command"/>
            <argument type="service" id="swark.components.services.order_service" />
        </service>

        <!-- Test Configuration Command -->
        <service id="swark.components.commands.test_configuration_command"
                 class="Swark\Components\Commands\TestConfigurationCommand">
            <tag name="console.command"/>
        </service>
    </services>
</container>
