<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Plugin configuration -->
        <service id="swark.config" class="Shopware\Components\Plugin\CachedConfigReader">
            <factory service="shopware.plugin.cached_config_reader" method="getByPluginName"/>
            <argument type="string">Swark</argument>
        </service>

        <!-- Connection Service -->
        <service id="swark.components.services.connection_service"
                 class="Swark\Components\Services\ConnectionService">
            <argument type="service" id="swark.config"/>
        </service>

        <!-- Order Service -->
        <service id="swark.components.services.order_service"
                 class="Swark\Components\Services\OrderService">
            <argument type="service" id="models" />
            <argument type="service" id="swark.components.helper.order_helper" />
            <argument type="service" id="swark.components.helper.plugin_helper" />
            <argument type="service" id="swark.components.services.transaction_service" />
            <argument type="service" id="swark.config"/>
            <argument type="service" id="swark.components.services.logger_service"/>
        </service>

        <!-- Transaction Service -->
        <service id="swark.components.services.transaction_service"
                 class="Swark\Components\Services\TransactionService">
            <argument type="service" id="swark.components.services.connection_service" />
            <argument type="service" id="swark.components.services.logger_service" />
        </service>

        <!-- Exchange Service -->
        <service id="swark.components.services.exchange_service"
                 class="Swark\Components\Services\ExchangeService">
            <argument type="service" id="http_client" />
            <argument type="service" id="swark.components.services.logger_service" />
            <argument type="service" id="models" />
        </service>

        <!-- Logger Service -->
        <service id="swark.components.services.logger_service"
                 class="Swark\Components\Services\LoggerService">
            <argument type="service" id="pluginlogger"/>
        </service>
    </services>
</container>
